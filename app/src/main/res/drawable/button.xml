<!-- button_bg.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Solid color -->
    <solid android:color="#003537" /> <!-- Warna biru navy -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" /> <!-- Sudut dengan radius 8dp -->

    <!-- Stroke (border) -->
    <stroke
        android:width="1dp"
        android:color="#003537" /> <!-- Garis tepi dengan warna yang sama -->
</shape>
